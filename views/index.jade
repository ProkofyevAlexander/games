doctype html
html(ng-app="gamesApp")
    head
        title= 'Games'
        link(rel='stylesheet' href='/css/layout.css')
        link(rel='stylesheet' href='/css/chat.css')
        link(rel='stylesheet' href='/css/games/checkers/checkers.css')
        script(type='text/javascript', src='/angular/angular.min.js')
        script(type='text/javascript', src='/js/controllers.js')
    body
        div(class='header')
            div(class='header-logo')
            div(class='header-nav')
                div(class='header-nav-itm')
                div(class='header-nav-itm')
                div(class='header-nav-itm')
        div(class='main')
            div(class='main-box')
                div(class='main-box-base')
                    div(class='game-checkers-playground' ng-controller="CheckersPlaygroundCtrl")
                        div(class='game-checkers-playground-row' ng-repeat="(key, x) in [0, 1, 2, 3, 4, 5, 6, 7]")
                            div(class='game-checkers-playground-row-tile _{{ playground.getTileXY(x, y).getType() }} {{ playground.getTileXY(x, y).isAvailable() ? "_available" : "" }}' ng-repeat="(key, y) in [0, 1, 2, 3, 4, 5, 6, 7]" ng-click="checkers.moveCheckerToXY(x,y)")
                                div(class='game-checkers-playground-row-tile__checker {{ playground.getTileXY(x, y).getChecker() != null ? "_" + playground.getTileXY(x, y).getChecker().getType() : "" }} {{ playground.getTileXY(x, y).getChecker() != null && playground.getTileXY(x, y).getChecker().isSelected() ? "_selected" : "" }} {{ playground.getTileXY(x, y).getChecker() != null && playground.getTileXY(x, y).getChecker().getType() != checkers.getCurrentPlayer() ? "_inactive" : "" }}' ng-if='playground.getTileXY(x, y).getChecker() != null' ng-click="checkers.selectCheckerXY(x,y)")
                div(class='main-box-side')
                    div(class='chat')
                        div(class='chat-messages')
                        div(class='chat-new-message')
        div(class='footer') Footer
