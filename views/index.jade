doctype html
html(ng-app='app')
    head
        title Games
        base(href='http://localhost:8000/')
        link(rel='stylesheet' href='/css/layout.css')
        link(rel='stylesheet' href='/css/chat.css')
        link(rel='stylesheet' href='/css/games/checkers/checkers.css')
        //script(type='text/javascript', src='/angular/angular.min.js')
        script(type='text/javascript', src='/node_modules/angular/angular.js')
        script(type='text/javascript', src='/node_modules/@angular/router/angular1/angular_1_router.js')
        script(type='text/javascript', src='/js/main.js')
    body
        div(class='header')
            div(class='header-logo')
            nav(class='header-nav')
                a(class='header-nav-itm' ng-link="['Main', {lng: 'en'}]") Main
                a(class='header-nav-itm' ng-link="['Checkers', {lng: 'en'}]") Checkers
                a(class='header-nav-itm') About
        div(class='main')
            div(class='main-box')
                div(class='main-box-base')
                    ng-outlet
                div(class='main-box-side')
                    div(class='chat')
                        div(class='chat-messages')
                        div(class='chat-new-message')
        div(class='footer') Footer
